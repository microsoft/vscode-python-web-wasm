	"version": "0.2.0",
	"configurations": [
		{
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"name": "Launch in Desktop - Node ExtHost",
			"outFiles": [
				"${workspaceFolder}/out/desktop/**/*.js"
			],
			"preLaunchTask": "npm: esbuild",
			"request": "launch",
			"type": "extensionHost"
		},
		{
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionDevelopmentKind=web"
			],
			"name": "Launch in Desktop - Web Worker ExtHost",
			"outFiles": [
				"${workspaceFolder}/dist/web/**/*.js"
			],
			"preLaunchTask": "npm: esbuild",
			"request": "launch",
			"type": "extensionHost"
		}
	]
}